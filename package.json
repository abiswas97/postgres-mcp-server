  "description": "Model Context Protocol server for PostgreSQL database operations",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "postgres-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
